@using MVC_SYSTEM.Class
@model MVC_SYSTEM.ModelsCorporate.tbl_TaxRelief

@{
    @Scripts.Render("~/bundles/jqueryval")

    var status = ViewBag.Status;
}

<section class="content-wrapper main-content clear-fix">

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 class="modal-title">@ViewBag.Title</h3>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("status", new { status })
        <div class="modal-body">
            <div class="form-horizontal">
                <div class="panel panel-primary">
                    <div class="panel-heading">@GlobalResCorp.titleTaxReliefTable</div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResCorp.lblContributionTaxreliefCode:</label>
                            <div class="col-sm-2">
                                @Html.TextBoxFor(model => model.fld_TaxReliefCode, htmlAttributes: new { @class = "form-control", @disabled = "true" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResCorp.lblContributionTaxreliefItem:</label>
                            <div class="col-sm-6">
                                @Html.TextBoxFor(model => model.fld_TaxReliefItem, htmlAttributes: new { @class = "form-control", @disabled = "true" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResCorp.lblContributionTaxreliefLimit</label>
                            <div class="col-sm-3">
                                @Html.TextBoxFor(model => model.fld_TaxReliefLimit, htmlAttributes: new { @class = "form-control", @disabled = "true" })
                            </div>
                        </div>
                        @Html.HiddenFor(model => model.fld_TaxReliefID)

                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12 text-center">
                    <h3>
                        <span class="label label-danger">
                            @ViewBag.Msg
                        </span>
                    </h3>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <input class="btn btn-success" type="submit" value=@GlobalResCorp.btnYes>
            <button class="btn btn-danger" data-dismiss="modal">@GlobalResCorp.btnNo</button>
        </div>
    }
</section>