@model MVC_SYSTEM.ModelsCorporate.tbl_UpahAktiviti

@{
    ViewBag.Title = "PayrateFullMaintenance";
    //Layout = "~/Views/Shared/_LayoutMain.cshtml";
    string aktvt = Model.fld_KodAktvt + " - " + Model.fld_Desc;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="modal-header">
    @*<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>*@

    @*Commented by Shazana on 23/10*@
    @* <h3 class="modal-title">@GlobalResCorp.titleDelete</h3>*@

    @*Added by Shazana on 23/10*@
    @if (ViewBag.Status == "Delete")
    {<h3 class="modal-title">@GlobalResCorp.titleDelete</h3>}
    else
    { <h3 class="modal-title">@GlobalResCorp.titleRecreate</h3>}
    @*Close Added by Shazana on 23/10*@

</div>

    <div class="modal-body">
        <div class="form-horizontal">
            <div class="panel panel-primary">
                <div class="panel-heading">@*Maklumat*@</div>
                <div class="panel-body">
                    <div class="form-group">
                        @Html.HiddenFor(model => model.fld_ID)
                        @Html.HiddenFor(model => model.fld_NegaraID)
                        @Html.HiddenFor(model => model.fld_SyarikatID)
                        <label class="control-label col-md-2">@GlobalResCorp.hdrWorkAktvt</label>
                        <div class="col-md-9">
                            @Html.TextBox("aktvt", aktvt, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">@GlobalResCorp.hdrPrice (RM)</label>
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.fld_Harga, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                        </div>
                    </div>

                    @*<div class="form-group">
                            <label class="control-label col-md-2">@GlobalResCorp.hdrProductvt (@Model.fld_Unit)</label>
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.fld_Produktvt, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                            </div>
                        </div>*@

                    <div class="form-group">
                        <div class="col-sm-9 col-sm-offset-3">
                            <h3>

                                <span class="label label-danger">
                                @*Added by Shazana on 23/10*@
                                    @if (ViewBag.Status == "Delete")
                                    {@GlobalResCorp.msgDelete}
                                else
                                { @GlobalResCorp.msgRecreate}
                                   @*Close Added by Shazana on 23/10*@
                                </span>
                            </h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <input class="btn btn-danger" type="submit" value=@GlobalResCorp.btnYes />
        <button class="btn btn-primary" data-dismiss="modal">@GlobalResCorp.btnNo</button>
    </div>
}
<script>
    $("form").removeData("validator");
    $("form").removeData("unobtrusiveValidation");
    $.validator.unobtrusive.parse("form");

</script>
