@using MVC_SYSTEM.Class
@model MVC_SYSTEM.ModelsCorporate.tbl_TaxRelief

@{
    @Scripts.Render("~/bundles/jqueryval")
}

<section class="content-wrapper main-content clear-fix">

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 class="modal-title">@GlobalResCorp.lblContributionTaxreliefUpdate</h3>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="modal-body">
            <div class="form-horizontal">
                <div class="panel panel-primary">
                    <div class="panel-heading">@GlobalResCorp.titleTaxReliefTable</div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResCorp.lblContributionTaxreliefCode:</label>
                            <div class="col-sm-2">
                                @Html.TextBoxFor(model => model.fld_TaxReliefCode, htmlAttributes: new { @class = "form-control", @readonly = "true" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResCorp.lblContributionTaxreliefItem:</label>
                            <div class="col-sm-6">
                                @Html.TextBoxFor(model => model.fld_TaxReliefItem, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.fld_TaxReliefItem, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResCorp.lblContributionTaxreliefLimit</label>
                            <div class="col-sm-3">
                                @Html.TextBoxFor(model => model.fld_TaxReliefLimit, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.fld_TaxReliefLimit, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        @Html.HiddenFor(model => model.fld_TaxReliefID)

                    </div>
                </div>
            </div>
        </div>

        <div class="modal-footer">
            <input class="btn btn-success" type="submit" value=@GlobalResCorp.btnSave>
            <button class="btn btn-warning" data-dismiss="modal">@GlobalResCorp.btnBack</button>
        </div>
    }
</section>