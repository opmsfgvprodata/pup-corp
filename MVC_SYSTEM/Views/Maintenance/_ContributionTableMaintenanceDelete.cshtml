@using MVC_SYSTEM.Class
@model MVC_SYSTEM.ModelsCorporate.tbl_JadualCarumanTambahan

@{
    @Scripts.Render("~/bundles/jqueryval")
}

<section class="content-wrapper main-content clear-fix">

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        @if(ViewBag.StatusJenisKodSubCaruman == "undelete")
        {<h3 class="modal-title">@GlobalResCorp.lblContributiontableUnDelete</h3> }
    else
    {<h3 class="modal-title">@GlobalResCorp.lblContributiontableDelete</h3>}

    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
<div class="modal-body">
    <div class="form-horizontal">
        <div class="panel panel-primary">
            <div class="panel-heading">@GlobalResCorp.lblContributionTableInfo</div>
            <div class="panel-body">
                <div class="form-group">
                    <label class="control-label col-sm-3">@GlobalResCorp.lblContributionSubCategoryCode:</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.fld_KodSubCaruman, htmlAttributes: new { @class = "form-control", @disabled = "true" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3">@GlobalResCorp.lblContributionTableMinWage:</label>
                    <div class="col-sm-2">
                        @Html.TextBoxFor(model => model.fld_GajiLower, htmlAttributes: new { @class = "form-control", @disabled = "true" })
                    </div>
                    <label class="control-label col-sm-offset-1 col-sm-3">@GlobalResCorp.lblContributionTableMaxWage</label>
                    <div class="col-sm-2">
                        @Html.TextBoxFor(model => model.fld_GajiUpper, htmlAttributes: new { @class = "form-control", @disabled = "true" })
                    </div>
                </div>
                <div class="form-group">
                    <div id="NotPCB02-Pekerja1">
                        <label class="control-label col-sm-3">@GlobalResCorp.lblContributionTableEmpyeeCont:</label>
                    </div>
                    <div id="ForPCB02-Pekerja1">
                        <label class="control-label col-sm-3">@GlobalResCorp.lblContributionTableEmpyeeM:</label>
                    </div>
                    <div class="col-sm-2">
                        @Html.TextBoxFor(model => model.fld_CarumanPekerja, htmlAttributes: new { @class = "form-control", @disabled = "true" })
                    </div>
                    <div id="ForPCB02-Pekerja2">
                        <label class="control-label col-sm-offset-1 col-sm-3">R(%):</label>
                        <div class="col-sm-2">
                            @Html.TextBoxFor(model => model.fld_TaxPercent_R, htmlAttributes: new { @class = "form-control", @disabled = "true" })
                        </div>
                    </div>
                    <div id="NotPCB02-Pekerja2">
                        <label class="control-label col-sm-offset-1 col-sm-3">@GlobalResCorp.lblContributionTableEmpyerCont:</label>
                        <div class="col-sm-2">
                            @Html.TextBoxFor(model => model.fld_CarumanMajikan, htmlAttributes: new { @class = "form-control", @disabled = "true" })
                        </div>
                    </div>
                </div>
                <div id="NotPCB02-Pekerja">

                    @*Added by Shazana 3/12/2023*@
                    <div id="ForPCB02">
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResCorp.lblContributionCategory1:</label>
                            <div class="col-sm-2">
                                @Html.TextBoxFor(model => model.fld_Category1_B, htmlAttributes: new { @class = "form-control", @disabled = "true" })
                            </div>
                            <label class="control-label col-sm-offset-1 col-sm-3">@GlobalResCorp.lblContributionCategory2:</label>
                            <div class="col-sm-2">
                                @Html.TextBoxFor(model => model.fld_Category2_B, htmlAttributes: new { @class = "form-control", @disabled = "true" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Html.HiddenFor(model => model.fld_JadualCarumanTambahanID)
    <div class="form-group">
        <div class="col-sm-12 text-center">
            <h3>
                @if (ViewBag.StatusJenisKodSubCaruman == "undelete")
                {
                    <span class="label label-danger">
                        @GlobalResCorp.msgUndeleteContribution
                    </span>
                }
                else
                {
                    <span class="label label-danger">
                        @GlobalResCorp.msgDelete
                    </span>
                }
            </h3>
        </div>
    </div>
</div>
        <div class="modal-footer">
            <input class="btn btn-success" type="submit" value=@GlobalResCorp.btnYes>
            <button class="btn btn-danger" data-dismiss="modal">@GlobalResCorp.btnNo</button>
        </div>
    }
</section>

<script>
    $(document).ready(function () {
        $("#NotPCB02").css("display", "");
        $("#NotPCB02-Pekerja1").css("display", "");
        $("#NotPCB02-Pekerja2").css("display", "");
        $("#ForPCB02").css("display", "none");
        $("#ForPCB02-Pekerja1").css("display", "none");
        $("#ForPCB02-Pekerja2").css("display", "none");
        })
    $("#fld_KodSubCaruman").change(function () {
        var fld_KodSubCaruman = $("#fld_KodSubCaruman").val();
        if (fld_KodSubCaruman == "PCB02")
        {
            $("#ForPCB02").css("display", "");
            $("#ForPCB02-Pekerja1").css("display", "");
            $("#ForPCB02-Pekerja2").css("display", "");
            $("#NotPCB02").css("display", "none");
            $("#NotPCB02-Pekerja1").css("display", "none");
            $("#NotPCB02-Pekerja2").css("display", "none");
        }

        else
        {
            $("#NotPCB02").css("display", "");
            $("#NotPCB02-Pekerja1").css("display", "");
            $("#NotPCB02-Pekerja2").css("display", "");
            $("#ForPCB02").css("display", "none");
            $("#ForPCB02-Pekerja1").css("display", "none");
            $("#ForPCB02-Pekerja2").css("display", "none");
        }
        debugger
    });

    function DisplayProgressMessage(ctl) {
        //$("body").addClass("submit-progress-bg");
        //$(".submit-progress").removeClass("hidden");
        $("#UpdateProgress1").css("display", "");
        return true;
    }
</script>