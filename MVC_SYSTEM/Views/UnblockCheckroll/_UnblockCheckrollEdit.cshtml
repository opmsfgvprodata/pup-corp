@using MVC_SYSTEM.Class
@model MVC_SYSTEM.ModelsCorporate.tbl_BlckKmskknDataKerjaUpdate

@{
    @Scripts.Render("~/bundles/jqueryval")
}

<section class="content-wrapper main-content clear-fix">

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 class="modal-title">@GlobalResCorp.lblUnblockUpdate</h3>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="modal-body">
            <div class="form-horizontal">
                <div class="panel panel-primary">
                    <div class="panel-heading">@GlobalResCorp.UnblockCheckrollData</div>
                    <div class="panel-body">
                        @if (Model.fld_Purpose == "blockdataentry")
                        {
                            <div class="form-group">
                                <label class="control-label col-sm-3">@GlobalResCorp.lblUnblk:</label>
                                <div class="col-sm-8">
                                    @Html.DropDownListFor(model => model.fld_BlokStatus, new SelectList(ViewBag.fld_Selection, "Value", "Text", Model.fld_BlokStatus), new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.fld_BlokStatus, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-sm-3">@GlobalResCorp.hdrCatat:</label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(model => model.fld_Remark, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.fld_Remark, "", new { @class = "text-danger" })
                                </div>
                            </div>

                        }
                        else

                        {
                            @*@Html.HiddenFor(model => model.fld_BlokStatus)*@

                            <div class="form-group">
                                <label class="control-label col-sm-3">@GlobalResCorp.hdrValidDate:</label>
                                <div class="col-sm-4">
                                    <div class='input-group date' id='datetimepicker1'>
                                        @Html.EditorFor(model => model.fld_ValidDT, new { htmlAttributes = new { @class = "form-control", @type = "text", autocomplete = "off", @Value = DateTime.Now.ToString("dd/MM/yyyy") } })
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar"></span>
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-sm-3">@GlobalResCorp.hdrCatat:</label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(model => model.fld_Remark, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.fld_Remark, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        }

                        @Html.HiddenFor(model => model.fld_ID)
                        @Html.HiddenFor(model => model.fld_Purpose)

                    </div>
                </div>
            </div>
        </div>

        <div class="modal-footer">
            <input class="btn btn-success" type="submit" value=@GlobalResCorp.btnSave>
            <button class="btn btn-warning" data-dismiss="modal">@GlobalResCorp.btnBack</button>
        </div>
    }
</section>

<script>
    $(document).ready(function () {

        $("form").removeData("validator");
        $("form").removeData("unobtrusiveValidation");
        $.validator.unobtrusive.parse("form");

        $(function () {
            $('#fld_ValidDT').datetimepicker({
                timepicker: false,
                format: 'd/m/Y',
                minDate: 0
            });
        });
    });
</script>

